cat > $WORKINGDIR/ifcfg-bond0.2007 <<EOF
DEVICE=bond0.2007
BOOTPROTO=none
ONBOOT=yes
VLAN=yes
BRIDGE=br2007

EOF

cat > $WORKINGDIR/ifcfg-br2007 <<EOF
DEVICE=br2007
TYPE=Bridge
BOOTPROTO=static
ONBOOT=yes
DELAY=0
STP=off

EOF

